{
	"name": "SendToMobile",
	"version": "0.0.5",
	"manifest_version": 2,
	"description": "An extension to send app install links to your mobile phone",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["extension.js"]
		}
	],
	"icons": {
		"16": "icon16.png",
	 	"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"contextMenus",
		"webRequest",
		"webRequestBlocking",
		"https://*/*",
		"http://*/*"
	]
}
